<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dpashko.transitionapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".TransitionApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true">
        <activity
            android:name=".ui.CountryDetailsActivity"
            android:theme="@style/DetailsTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.CountriesListActivity" />
        </activity>
        <activity
            android:name=".ui.CountriesListActivity"
            android:theme="@style/Theme.Design">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
